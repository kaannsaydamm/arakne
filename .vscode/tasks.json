{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Driver (WDK)",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}/driver/windows/ArakneDriver.sln",
                "/p:Configuration=Release",
                "/p:Platform=x64"
